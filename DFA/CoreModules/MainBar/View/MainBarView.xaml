<UserControl x:Class="DFA.CoreModules.MainBar.View.MainBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DFA.CoreModules.MainBar.View"
             xmlns:Core="clr-namespace:DFA"
             mc:Ignorable="d" 
             >
    <Grid>

        <FrameworkElement x:Name="ProxyElement" Visibility="Collapsed"/>


        <ProgressBar Core:ProgressBarSmoother.SmoothValue="{Binding ProgressTopBar}" x:Name="progressBarTopMost"  MinHeight="2" MinWidth="1000" MaxHeight="2" Height="2"  >
            <ProgressBar.Background>
                <SolidColorBrush Color="{Binding DataContext.TopBarStateColor, Source={x:Reference ProxyElement}, UpdateSourceTrigger=PropertyChanged}"/>
            </ProgressBar.Background>
            <ProgressBar.BorderBrush>
                <SolidColorBrush Color="{Binding DataContext.TopBarStateColor, Source={x:Reference ProxyElement} , UpdateSourceTrigger=PropertyChanged}"/>
            </ProgressBar.BorderBrush>
        </ProgressBar>
    </Grid>

</UserControl>
